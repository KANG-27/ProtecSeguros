    /* General styles */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f4f4f4;
}

.social-section {
  background-color: #fff;
  padding: 40px;
  text-align: center;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.social-section h2 {
  font-size: 24px;
  margin-bottom: 20px;
  color: #333;
}

.social-icons {
  display: flex;
  justify-content: center;
  gap: 20px;
}

/* Social Icons styles */
.social-icons a {
  text-decoration: none;
  font-size: 40px;
  transition: transform 0.3s ease, color 0.3s ease;
}

/* Icon color and hover effect */
.facebook {
  color: #4267B2;
}

.facebook:hover {
  color: #365899;
  transform: scale(1.2);
}

.instagram {
  color: #C13584;
}

.instagram:hover {
  color: #e1306c;
  transform: scale(1.2);
}

.linkedin {
  color: #0077B5;
}

.linkedin:hover {
  color: #005983;
  transform: scale(1.2);
}

.twitter {
  color: #1DA1F2;
}

.twitter:hover {
  color: #1a91da;
  transform: scale(1.2);
}

</style>